<div style="font-family:'Open Sans','Helvetica',Helvetica,Arial,sans-serif;box-sizing:border-box;width:100%!important;height:100%;line-height:1.4;font-size:15px;background:#f6f6f6;margin:0;padding:0">
    <table style="box-sizing:border-box;font-size:15px;width:100%;background:#f2f2f2;margin:0;padding:0">
        <tbody>
            <tr style="box-sizing:border-box;font-size:14px;margin:0;padding:0">
                <td width="600" style="box-sizing:border-box;vertical-align:top;display:block!important;max-width:600px!important;clear:both!important;margin:0 auto;padding:0" valign="top">
                    <div style="box-sizing:border-box;max-width:600px;display:block;margin:0 auto;padding:20px">
                        <table cellpadding="0" cellspacing="0" style="width:100%;box-sizing:border-box;border-radius:3px;background:#fff;margin:0;padding:0;border:1px solid #e9e9e9">
                            <tbody>
                                <tr style="box-sizing:border-box;margin:0;padding:0">
                                    <td style="text-align:center;box-sizing:border-box;vertical-align:middle;margin:0;padding:18px 30px 0px 30px" valign="center">
                                        <div style="border-bottom:1px solid #e5e5e5;padding-bottom:23px;text-align:center">
                                            <a style="text-decoration:none;display:inline-block" href="https://masterapi.azurewebsites.net/" target="_blank">
                                                <img src="http://masterapi.azurewebsites.net/master-api-logo.png" alt="Master API" class="CToWUd">
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr style="box-sizing:border-box;margin:0;padding:0">
                                    <td style="box-sizing:border-box;vertical-align:top;margin:0;padding:30px 30px 15px 30px" valign="top">
                                        @RenderBody()
                                    </td>
                                </tr>
                                <tr>
                                    <td style="text-align: center;font-size: 11px;padding: 0 10px;">
                                        <hr style="border: none;height: 1px;color: #eee;background-color: #eee;">
                                        <div style="padding: 10px;">
                                           Something Here
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div style="box-sizing:border-box;font-size:14px;width:100%;clear:both;color:#999;margin:0;padding-top:20px;padding-bottom:20px">
                            <table style="width:100%;box-sizing:border-box;font-size:14px;margin:0;padding:0">
                                <tbody>
                                    <tr style="box-sizing:border-box;font-size:14px;margin:0;padding:0">
                                        <td style="box-sizing:border-box;font-size:12px;vertical-align:top;text-align:center;margin:0;padding:0 10px" align="center" valign="top">
                                            <hr style="border: none;height: 1px;color: #eee;background-color: #eee;">
                                            <div>
                                               @RenderSection("Footer")
                                            </div>
                                        </td>
                                    </tr>
                                    <tr style="box-sizing:border-box;font-size:14px;margin:0;padding:0">
                                        <td style="box-sizing:border-box;font-size:12px;vertical-align:top;text-align:center;margin:0;padding:0 0 20px" align="center" valign="top">
                                            <span style="color:#777777;display:inline-block;font-size:11px">You are receiving this email because you are on our mailing list.</span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>